﻿﻿@{
    ViewData["Title"] = "API Modal";
}

<div class="container">
    <table class="pokedex" id="mainTable">
        <img class="pokeball-image" src="https://cdn.pnghd.pics/data/22/bola-pokemon-png-13.png" alt="Poké Ball">
        <h1>Pokédex</h1>
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<div class="modal fade" id="modalPoke" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    <img class="pokemon-img" src="" alt="">
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <span class="pokemon-type"></span>
                </div>
                
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" id="hp" role="progressbar"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" id="attack" role="progressbar"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" id="defense" role="progressbar"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" id="sattack" role="progressbar"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" id="sdefense" role="progressbar"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" id="speed" role="progressbar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

